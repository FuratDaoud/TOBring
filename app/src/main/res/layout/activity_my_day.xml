<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MyDay">

    <ImageView
        android:id="@+id/imgback"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-20dp"
        android:src="@drawable/back"/>
    <TextView
        android:id="@+id/myday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="-12dp"
        android:layout_toRightOf="@+id/imgback"
        android:gravity="left"
        android:text="My Day"
        android:textAllCaps="true"
        android:textColor="#36FBE5"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="596dp"
        android:layout_marginTop="90dp"
        android:background="#555353">

        <ImageView
            android:id="@+id/imgadd"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/btnaddtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/imgadd"
            android:text="Add Tasks"
            android:textColor="#36FBE5"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgRemindme"
            android:layout_width="80dp"
            android:layout_height="62dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="155dp"
            android:src="@drawable/remind" />

        <TextView
            android:id="@+id/btnRemindme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnaddtask"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="67dp"
            android:layout_toRightOf="@+id/imgRemindme"
            android:text="Remind Me"
            android:textColor="#36FBE5"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDuedate"
            android:layout_width="47dp"
            android:layout_height="75dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="247dp"
            android:src="@drawable/duedate" />

        <TextView
            android:id="@+id/btnDuedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRemindme"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="67dp"
            android:layout_toRightOf="@+id/imgDuedate"
            android:text="Add Due Date "
            android:textColor="#36FBE5"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgRepeat"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="360dp"
            android:src="@drawable/reapet" />

        <TextView
            android:id="@+id/btnReapet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDuedate"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="67dp"
            android:layout_toRightOf="@+id/imgRepeat"
            android:text="Reapet"
            android:textColor="#36FBE5"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgSetlocation"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="455dp"
            android:src="@drawable/setlocation" />

        <TextView
            android:id="@+id/btnSetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnReapet"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="67dp"
            android:layout_toRightOf="@+id/imgSetlocation"
            android:text="Set Location"
            android:textColor="#36FBE5"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>